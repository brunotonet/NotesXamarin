<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesXamarin.Form">
	<StackLayout Orientation="Vertical">
		<Entry x:Name="Titulo" Text="{Binding Titulo}" Placeholder="Informa um título" />
	
		<Editor x:Name="Descricao" Text="{Binding Descricao}" VerticalOptions="FillAndExpand" BackgroundColor="Silver" />

		<Button x:Name="botaoAcao" Clicked="Salvar_Clicked" BackgroundColor="Blue" TextColor="Yellow" />
	</StackLayout>

</ContentPage>